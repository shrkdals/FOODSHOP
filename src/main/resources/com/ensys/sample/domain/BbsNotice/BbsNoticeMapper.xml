<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ensys.sample.domain.BbsNotice.BbsNoticeMapper">

    <select id="selectList" resultType="hashmap" parameterType="hashmap" statementType="CALLABLE">
        {CALL UP_FS_BBS_S (#{CD_COMPANY} ,#{BOARD_TYPE} ,#{KEYWORD},#{CONDITION} ,#{NOWPAGE} ,#{PAGING_SIZE} ,#{OPT} ,#{SEQ} ) }
    </select>

    <select id="selectDetail" resultType="hashmap" parameterType="hashmap" statementType="CALLABLE">
        {CALL UP_FS_BBS_DETAIL ( #{CD_COMPANY}, #{BOARD_TYPE}, #{SEQ}, #{OPT} ) }
    </select>

    <select id="write" resultType="hashmap" parameterType="hashmap" statementType="CALLABLE">
        {CALL UP_FS_BBS_I(#{CD_COMPANY}, #{BOARD_TYPE}, #{BOARD_SP}, #{SEQ}, #{TITLE}, #{CONTENTS}, #{HIT}, #{ID_USER} )}
    </select>

    <select id="updateWrite" resultType="hashmap" parameterType="hashmap" statementType="CALLABLE">
        {CALL UP_FS_BBS_U(#{CD_COMPANY}, #{BOARD_TYPE}, #{BOARD_SP}, #{SEQ}, #{TITLE}, #{CONTENTS}, #{HIT}, #{ID_USER} )}
    </select>

    <select id="deleteWrite" resultType="hashmap" parameterType="hashmap" statementType="CALLABLE">
        {CALL UP_FS_BBS_D(#{CD_COMPANY}, #{BOARD_TYPE}, #{BOARD_SP}, #{SEQ}) }
    </select>

</mapper>


